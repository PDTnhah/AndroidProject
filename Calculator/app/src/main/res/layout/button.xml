<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        >

        <Button
            android:id="@+id/btcongtru"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#C1ACAC"
            android:fontFamily="monospace"
            android:text="+/-"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#494949"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#494949"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#494949"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#494949"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#494949"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#494949"
            android:fontFamily="monospace"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#494949"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#494949"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#494949"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btC"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#C1ACAC"
            android:fontFamily="monospace"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btBS"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#C1ACAC"
            android:fontFamily="monospace"
            android:text="BS"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btCE"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#C1ACAC"
            android:text="CE"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/cong"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#C1ACAC"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/tru"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#C1ACAC"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/nhan"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#C1ACAC"
            android:text="x"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/chia"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#C1ACAC"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bang"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#C1ACAC"
            android:text="="
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/btcham"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#C1ACAC"
            android:text="."
            android:textColor="@color/white"
            android:textSize="30sp"></Button>

        <Button
            android:id="@+id/bt0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@color/purple_200"
            android:backgroundTint="#494949"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp"></Button>
    </GridLayout>
</RelativeLayout>